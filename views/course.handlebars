<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3 class="subtitle">Create a New Course:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <label for="project-name">Course name:</label>
                <input class="form-input" type="text" id="project-name" name="project-name" />
            </div>
            <div class="form-group">
                <label for="project-desc">Description:</label>
                <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if courses.length}}
    <div class="col-md-8 project-list">
        <h3 class="title">Current Courses:</h3>

        {{#each courses as |course|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/course/{{course.id}}">{{course.classname}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id-del="{{course.id}}">DELETE</button>
                <button class="btn btn-sm btn-primary" data-id-put="{{course.id}}">UPDATE</button>
            </div>
        </div>
        {{/each}}


                <table style="width:100%">
                    <tr>
                        <th>Course Name</th>
                        <th>Course Description</th>
                        <th>Course Instructor</th>
                        <th>Student Id</th>
                        <th>Students Enrolled</th>
                        <th>Delete</th>
                    </tr>
                    {{#each courses as |course|}}
                    <tr>
                        <td>{{course.classname}}</td>
                        <td>{{course.description}}</td>
                        <td>{{course.user_id}}</td>
                        <td>placeholder</td>
                        <td>placeholder</td>
                        <td><button class="btn btn-sm btn-danger" data-id-del="{{course.id}}"><i class="fa fa-trash"></i></button></td>
                    </tr>
                    {{/each}}
                </table>
    </div>
    {{/if}}
</div>

<script src="./js/course.js"></script>
