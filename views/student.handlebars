<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3 class="subtitle">Add New Student:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <label for="student-firstname">First name:</label>
                <input class="form-input" type="text" id="firstname" name="firstname" />
            </div>
            <div class="form-group">
                <label for="student-lastname">Last name:</label>
                <input class="form-input" id="lastname" name="lastname"></input>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    {{#if students.length}}  
    <div class="col-md-6 project-list">
        <h3 class="subtitle">Current Students:</h3>

        {{#each students as |student|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/student/{{student.id}}">{{student.firstname}}, {{student.lastname}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id-del="{{student.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
        {{#each students as |student|}}
            <table style="width:100%">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Update Button</th>
                    <th>Delete Button</th>

                </tr>
                <tr>
                    <td>{{student.firstname}}</td>
                    <td>{{student.lastname}}</td>
                    <td><button class="btn btn-sm btn-link" data-id-put="{{student.id}}"><i class="fa fa-edit"></i></button></td>
                    <td><button class="btn btn-sm btn-danger" data-id-del="{{student.id}}"><i class="fa fa-trash"></i></button></td>
                </tr>
                {{/each}}
            </table>
    </div>
    {{/if}}
</div>

<script src="./js/addStudent.js"></script>