<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3 class="subtitle">Add New Group:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <label for="groupname">Group name:</label>
                <input class="form-input" type="text" id="groupname" name="groupname" />
            </div>
            <div class="form-group">
                <label for="projectname">Project name:</label>
                <input class="form-input" id="projectname" name="projectname"></input>
            </div>
            <div class="form-group">
                <label for="selectStudent">Select Student:</label><br>
                <div class="select is-link">
                    <select class="is-focused">
                        <option>Select student</option>
                        <option>student - 1</option>
                        <option>student - 2</option>
                        <option>student - 3</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="selectCourse">Select Course:</label><br>
                <div class="select is-link">
                    <select class="is-focused">
                        <option>Select Course</option>
                        <option>student - 1</option>
                        <option>student - 2</option>
                        <option>student - 3</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    {{#if groups.length}}  
    <div class="col-md-7 project-list">
        <h3 class="subtitle">Current Groups:</h3>

        {{#each groups as |group|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/student/{{group.group_id}}">{{group.group_id}}, {{group.group_name}}, {{group.project_name}}, {{group.student_id}},{{group.course_id}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{group.group_id}}"><i class="fa fa-trash"></i></button>
            </div>
        </div>
        {{/each}}

        <table style="width:100%">
            <tr>
                <th>Group Id</th>
                <th>Group Name</th>
                <th>Project Name</th>
                <th>Student Id</th>
                <th>Course Id</th>
                <th>Delete</th>
            </tr>
            {{#each groups as |group|}}
            <tr>
                <td>{{group.group_id}}</td>
                <td>{{group.group_name}}</td>
                <td>{{group.project_name}}</td>
                <td>{{group.student_id}}</td>
                <td>{{group.course_id}}</td>
                <td><button class="btn btn-sm btn-danger" data-id="{{group.group_id}}"><i class="fa fa-trash"></i></button></td>
            </tr>
             {{/each}}
        </table>
    </div>
    {{/if}}
</div>

<script src="./js/addGroup.js"></script>