
<div class="row mt-4">
    {{#if groups.length}}
    <div class="col-md-6 project-list">
        <h3 class="subtitle is-info has-text-link has-text-centered">Current Groups:</h3>
    
        {{#each groups as |group|}}
        <div class="row mb-2 table is-bordered pb-1 pb-1 pt-2 pb-0">
            <div class="col-md-9">
                <h4><a href="/student/{{group.group_id}}">{{group.group_id}}, {{group.group_name}}, {{group.project_name}},
                        {{group.student_id}},{{group.course_id}}</a></h4>
            </div>
            <div class="col-md-3">
                <button class="btn btn-sm btn-danger" data-id-del="{{group.group_id}}"><i class="fa fa-trash"></i></button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
    <div class="col-md-6">
        <h3 class="subtitle is-info has-text-link has-text-centered">Add New Group:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <label for="groupname">Group name:</label>
                <input class="form-input" type="text" id="groupname" name="groupname">
            </div>
            <div class="form-group">
                <label for="projectname">Project name:</label>
                <input class="form-input" id="projectname" name="projectname">
            </div>
           
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/addGroup.js"></script>